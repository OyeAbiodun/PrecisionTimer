{
  "name": "PrecisionTimer",
  "version": "1.0.0",
  "description": "PrecisionTimer - A modern, cross-platform timer application with sleek Windows-style UI. Built with Electron.js for intuitive time management.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": {
    "name": "Abiodun Oyewole",
    "email": "abiodunoyewole994@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.precisiontimer.app",
    "productName": "PrecisionTimer",
    "artifactName": "${productName}.${ext}",
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "tar.gz"
      ],
      "icon": "icon.png",
      "category": "Utility"
    }
  },
  "keywords": []
}
